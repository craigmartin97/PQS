<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="BaseFontStyle" TargetType="{x:Type Control}">
        <Setter Property="FontFamily" Value="{StaticResource LatoRegular}" />
    </Style>

    <!-- Value editing label styling for conditions -->
    <Style x:Key="ListViewContentLabelStyle" TargetType="{x:Type Control}" BasedOn="{StaticResource BaseFontStyle}">
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Stretch" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="FontSize" Value="{StaticResource FontSize18}" />
    </Style>


    <Style x:Key="ListViewTextBoxStyle" TargetType="{x:Type TextBlock}">
        <Setter Property="VerticalAlignment" Value="Stretch" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="FontSize" Value="{StaticResource FontSize18}" />
        <Setter Property="FontFamily" Value="{StaticResource LatoRegular}" />
    </Style>

</ResourceDictionary>