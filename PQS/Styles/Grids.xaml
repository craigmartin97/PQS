<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Grid styling for the operation button on the Edit/Add category usercontrols -->
    <Style x:Key="CategoryOperationButtonGridStyle" TargetType="{x:Type Grid}">
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="MinHeight" Value="70" />
        <Setter Property="Margin" Value="0,15,0,0" />
        <Setter Property="MinWidth" Value="200" />
    </Style>

    <!-- Categories overall grid style -->
    <Style x:Key="BaseGridStyle" TargetType="{x:Type Grid}">
        <Setter Property="Background" Value="{StaticResource WhiteColorBrush}" />
        <Setter Property="Margin" Value="0,10,0,20" />
    </Style>

    <Style x:Key="AdminGridRowStyle" TargetType="{x:Type Grid}">
        <Setter Property="Margin" Value="0,15,0,0" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
    </Style>
    
</ResourceDictionary>