<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="MessageTextBlockStyle" TargetType="{x:Type TextBlock}">
        <Setter Property="Text" Value="{Binding Path=Message, FallbackValue='Error getting message'}" />
        <Setter Property="FontSize" Value="{StaticResource FontSize25}" />
        <Setter Property="FontFamily" Value="{StaticResource LatoRegular}" />
        <Setter Property="Margin" Value="10" />
        <Setter Property="TextWrapping" Value="Wrap" />
    </Style>

    <!-- Navigation content style -->
    <Style x:Key="NavigationTextBlockContentStyle" TargetType="{x:Type TextBlock}">
        <Setter Property="Margin" Value="8,0,0,0" />
        <Setter Property="Foreground" Value="{StaticResource WhiteColorBrush}" />
        <Setter Property="FontSize" Value="{StaticResource FontSize18}" />
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="FontFamily" Value="{StaticResource LatoRegular}" /> 
    </Style>
</ResourceDictionary>